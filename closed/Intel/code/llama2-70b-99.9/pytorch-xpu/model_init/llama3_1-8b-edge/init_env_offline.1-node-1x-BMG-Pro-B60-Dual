#!/bin/bash

source $MODEL_INIT_DIR/init_env_shared
# Validate and set Tensor parallel and Instances
export TP=1
export NUM_INSTS=1

if (( XPU_COUNT > 0 )); then
    # XPU
    export TP=1
    export NUM_INSTS=$((XPU_COUNT / TP))
    export BATCH_SIZE=128
    QPS_PER_XPU=6.25
    TARGET_QPS=$(echo "scale=8; $QPS_PER_XPU * $XPU_COUNT" | bc)
    sed -i "/llama3_1-8b-edge.Offline.target_qps/c\llama3_1-8b-edge.Offline.target_qps = $TARGET_QPS" $ROOT_DIR/user.conf
else
    echo "Error: No XPU found. CPU is not enabled for this workload"
fi
